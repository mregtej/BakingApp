<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_widget_recipe"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_margin"
    android:background="@drawable/dr_widget_background">

    <TextView
        android:id="@+id/tv_widget_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginVertical="8dp"
        android:textColor="@android:color/white"
        style="@android:style/TextAppearance.Medium"
        android:text="@string/recipe_title"/>

    <GridView
        android:id="@+id/gv_widget_recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="4dp"
        android:numColumns="1"/>
    
    <RelativeLayout
        android:id="@+id/rl_empty_recipe_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_empty_recipe_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"
            android:textColor="@android:color/white"
            style="@android:style/TextAppearance.Medium"
            android:text="@string/empty_ingredient"/>

    </RelativeLayout>

</LinearLayout>